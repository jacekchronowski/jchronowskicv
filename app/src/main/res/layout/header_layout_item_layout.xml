<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/user_header_background">

    <ImageView
        android:id="@+id/iv_header"
        style="@style/UserListTopHeaderImageStyle"
        android:layout_marginTop="@dimen/user_header_image_margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_user_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_user_name"
        style="@style/UserListTopNameTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_user_position"
        tools:text="Cristiano Ronaldo" />

    <TextView
        android:id="@+id/tv_user_position"
        style="@style/UserListTopPositionTextStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/iv_label2"
        tools:text="Football player" />

    <TextView
        android:id="@+id/tv_label1"
        style="@style/UserListToLabelTextStyle"
        android:layout_marginStart="@dimen/top_header_button_margin"
        app:layout_constraintEnd_toStartOf="@+id/tv_label2"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Twitter" />

    <TextView
        android:id="@+id/tv_label2"
        style="@style/UserListToLabelTextStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_label3"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/tv_label1"
        tools:text="Github" />

    <TextView
        android:id="@+id/tv_label3"
        style="@style/UserListToLabelTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/top_header_button_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/tv_label2"
        tools:text="Linkedin" />

    <ImageView
        android:id="@+id/iv_label1"
        style="@style/UserListToLabelImageStyle"
        app:layout_constraintBottom_toTopOf="@+id/tv_label1"
        app:layout_constraintEnd_toEndOf="@+id/tv_label1"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/tv_label1"
        tools:text="Twitter" />

    <ImageView
        android:id="@+id/iv_label2"
        style="@style/UserListToLabelImageStyle"
        app:layout_constraintBottom_toTopOf="@+id/tv_label2"
        app:layout_constraintEnd_toEndOf="@+id/tv_label2"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/tv_label2"
        tools:text="Twitter" />

    <ImageView
        android:id="@+id/iv_label3"
        style="@style/UserListToLabelImageStyle"
        android:layout_marginTop="@dimen/top_header_button_margin"
        app:layout_constraintBottom_toTopOf="@+id/tv_label3"
        app:layout_constraintEnd_toEndOf="@+id/tv_label3"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/tv_label3"
        tools:text="Twitter" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="iv_label1,tv_label1"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="iv_label2,tv_label2"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="iv_label3,tv_label3"/>

</androidx.constraintlayout.widget.ConstraintLayout>