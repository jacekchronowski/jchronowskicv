<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        style="@style/UserListMinorItemTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/user_list_minor_item_side_margin"
        android:layout_marginTop="@dimen/user_list_minor_item_top_margin"
        android:layout_marginBottom="@dimen/user_list_minor_item_bottom_margin" />

    <TextView
        android:id="@+id/tv_value"
        style="@style/UserListMinorItemTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/user_list_minor_item_top_margin"
        android:layout_marginEnd="@dimen/user_list_minor_item_side_margin"
        android:layout_marginBottom="@dimen/user_list_minor_item_bottom_margin" />

</RelativeLayout>